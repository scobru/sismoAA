{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "rootDir": "./",
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"], // Add this line to include TypeScript files in the src directory
  "exclude": ["node_modules", "dist"]
}

